    <?xml version="1.0" encoding="UTF-8" ?>
	<widget xmlns = "http://www.w3.org/ns/widgets"		 
		 xmlns:gap = "http://phonegap.com/ns/1.0"
		 id = "com.bingo-boom.lk"
		 version = "1.0" >
    
		<name>Партнер Bingo-Boom</name>		
		<description>
			Партнер Bingo-Boom
		</description>		
		<author href="http://bingo-boom.ru/" email="harut@bingo-boom.ru">
			Bingo Boom
		</author>
		<icon src="img/icon.png" />
		<icon src="img/icon57x57.png" gap:platform="ios" width="57" height="57" />
		<icon src="img/icon72x72.png" gap:platform="ios" width="72" height="72" />
		<icon src="img/icon76x76.png" gap:platform="ios" width="76" height="76" />
		<icon src="img/icon120x120.png" gap:platform="ios" width="120" height="120" />
		<icon src="img/icon152x152.png" gap:platform="ios" width="152" height="152" />
		
		
		<gap:splash src="img/splash.png" gap:platform="ios" width="640" height="1136" />		
		
		<preference name="phonegap-version" value="3.5.0" />
		<preference name="orientation" value="portrait" />
		<preference name="fullscreen" value="true" />
		<preference name="DisallowOverscroll" value="true"/>
		
		<gap:platform name="ios" />
		<gap:plugin name="org.apache.cordova.device" />
		<gap:plugin name="org.apache.cordova.dialogs" />
		<gap:plugin name="org.apache.cordova.console" version="0.2.7" />
		<gap:plugin name="org.apache.cordova.contacts" version="0.2.9" />
		<gap:plugin name="org.apache.cordova.network-information" version="0.2.7" />
		<gap:plugin name="org.apache.cordova.inappbrowser" version="0.2.4" />
		<gap:plugin name="com.phonegap.plugin.statusbar" />
		<gap:plugin name="com.phonegap.plugins.barcodescanner" version="1.1.0" />
		<gap:config-file platform="ios" parent="UIStatusBarHidden">
			<true/>
		</gap:config-file>
		<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
			<false/>
		</gap:config-file>
		<preference name="StatusBarOverlaysWebView" value="true" />

		<access origin="http://api.bingo-boom.net" subdomains="true" />
		<access origin="http://bingo-boom.ru" subdomains="true" />
		
		</widget>